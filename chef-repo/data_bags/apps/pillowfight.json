{
  "id": "pillowfight",
  "couchbase_role": ["server"],
  "couchbase_buckets": {
    "production": {
      "bucket": "production_default",
      "memory_quota_mb": 100
    },
    "production_not_replicated": {
      "bucket": "production_not_replicated",
      "type": "couchbase",
      "replicas": false,
      "memory_quota_mb": 125
    },
    "production_replicated": {
      "bucket": "production_replicated",
      "type": "couchbase",
      "replicas": 2,
      "memory_quota_mb": 125
    },
    "production_percent": {
      "bucket": "production_percent",
      "type": "couchbase",
      "replicas": 0,
      "memory_quota_percent": 0.1
    },
    "production_memcached": {
      "bucket": "production_memcached",
      "type": "memcached",
      "memory_quota_mb": 100
    },
    "staging": {
      "bucket": "staging_default",
      "memory_quota_mb": 100
    }
  }
}
