<% @buckets.each do |environment, bucket| %>
<%= environment %>:
  hostname: <%= @nodes.first %>
  node_list: [<%= @nodes.join(", ") %>]
  <% bucket.reject { |key, value| %w(memory_quota_mb replicas memory_quota_percent type).include? key }.each do |key, value| %>
  <%= key %>: <%= value.inspect %>
  <% end %>
<% end %>
